{
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "markdown",
        "html",
        "json",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "prettier.tabWidth": 4,
    "prettier.semi": false,
    "html.enable": true,
    "html.format.enable": true,
    "eslint.autoFixOnSave": true,
    "eslint.run": "onSave",
    "languageserver": {
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml",
                "hie.yaml"
            ],
            "filetypes": ["haskell", "lhaskell"]
        }
    },
    "svelte.enable-ts-plugin": true
}
