{
  "coc.preferences.formatOnSaveFiletypes": ["css"],
  "prettier.tabWidth": 2,
  "prettier.semi": false,
  "html.enable": true,
  "html.format.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.run": "onSave",
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"]
    }
  },
  "svelte.enable-ts-plugin": true
}
