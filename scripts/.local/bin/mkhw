#! /usr/bin/env python

import time

classes = {
    1: "CS 4375.HON",
    2: "CS 4348.HON",
    3: "CS 4390.002",
    4: "ECON 4330.001",
    5: "ECON 4345.001",
}

title = input("title? ")
print("\n".join(f"{k}: {v}" for k, v in classes.items()))
cls = input("Which number? ")
cls = classes[int(cls)]
filename = input("filename? ")

with open(filename, "w") as f:
    print(f'''---
geometry: margin=.5in
title:
  - {title}
subtitle: {cls}
output:
  pdf_document:
    ( md_extensions: +subscript
author:
  - Travis A. Dula
date:
  - {time.strftime('%Y-%m-%d', time.localtime())}
---
''', file=f)
